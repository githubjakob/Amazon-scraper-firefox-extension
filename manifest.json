{
    "manifest_version": 2,
    "name": "amazon-scraper-firefox-extension",
    "version": "1.0",
    "description": "Amazon Scraper",
    "homepage_url": "https://jakobzanker.de/",
    "icons": {
        "48": "icons/icon.png"
    },
    "permissions": [
        "activeTab",
        "clipboardWrite"
    ],
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Amazon Scraper",
        "default_popup": "popup/popup.html"
    }
}